@model List<Product>

@{
    ViewBag.Title = "Produkty";
    Layout = "_Layout";
}

<h1 class="text-center my-4">Nasze Produkty</h1>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <img class="card-img-top" src="@product.ImageUrl" alt="@product.Name">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center">@product.Name</h5>
                        @if (@product.OldPrice > 0)
                        {
                            <p class="card-text text-center font-weight-bold"><s>@product.OldPrice zł</s> @product.Price zł</p>
                        }
                        else
                        {
                            <p class="card-text text-center font-weight-bold">@product.Price zł</p>
                        }
                        <a class="btn btn-primary mt-auto align-self-center" asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus" viewBox="0 0 16 16">
                                <path d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9z"/>
                                <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1zm3.915 10L3.102 4h10.796l-1.313 7zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0m7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                            </svg> Dodaj do koszyka
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>